<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- Linha 1: Canal e ID da máquina -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewChannel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MQTT"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/textViewMachineId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MachineID: 123"
            android:textSize="14sp"
            android:textColor="#666666" />
    </LinearLayout>

    <!-- Linha 2: Item e preço -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/textViewItemNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Item #42"
            android:textSize="14sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/textViewItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$3.50"
            android:textSize="14sp"
            android:textColor="#333333" />
    </LinearLayout>

    <!-- Linha 3: Data/Hora -->
    <TextView
        android:id="@+id/textViewDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="12/09/2025 14:35"
        android:textSize="12sp"
        android:textColor="#999999" />
</LinearLayout>
