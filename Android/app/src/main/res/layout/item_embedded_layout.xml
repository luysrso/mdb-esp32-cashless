<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerEmbeddedItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- Linha de status (vermelho, verde ou azul via adapter) -->
    <View
        android:id="@+id/viewDeviceOffline"
        android:layout_width="4dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="#F44336" />

    <!-- Nome do device -->
    <TextView
        android:id="@+id/textViewDeviceAlias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Device Alias"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#333333" />

    <ImageButton
        android:id="@+id/btnSendCredit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_send"
        android:contentDescription="Enviar crÃ©dito" />
</LinearLayout>
